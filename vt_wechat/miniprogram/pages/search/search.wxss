/* miniprogram/pages/search/search.wxss */
.container{
  min-height: 100vh;
  padding:10rpx 20rpx; 
}
.search{
  display: flex;
  padding: 10rpx 0;
  justify-content: space-around;
}
.search>input{
  font-size: 16px;
  width: 500rpx;
  border: 1px solid #0083ec;
  border-radius: 30rpx;
  padding: 0 20rpx;
}
.top{
  margin: 10rpx 0;
  padding: 10rpx;
  font-size: 16px;
  display: flex;
  justify-content: space-between;
}
.top>.change{
  position: relative;
}
.top>.change>image{
  width:40rpx;
  height: 40rpx;
  position: relative;
  top:4px;
  left: 0px;
}
.tags{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.tags>text{
  font-size: 16px;
  padding: 10rpx;
  border-radius: 30rpx;
  margin: 10rpx 10rpx;
  color: #fff;
}
